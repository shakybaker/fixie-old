@model IEnumerable<Fixie.Domain.Release>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Created
        </th>
        <th>
            CreatedBy
        </th>
        <th>
            Modified
        </th>
        <th>
            ModifiedBy
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            Boards
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
        <td>
			@String.Format("{0:g}", item.Created)
        </td>
        <td>
			@item.CreatedBy
        </td>
        <td>
			@String.Format("{0:g}", item.Modified)
        </td>
        <td>
			@item.ModifiedBy
        </td>
        <td>
			@item.Name
        </td>
        <td>
			@item.Description
        </td>
        <td>
			@(item.Boards == null ? "None" : item.Boards.Count.ToString())
        </td>
    </tr>
}

</table>


